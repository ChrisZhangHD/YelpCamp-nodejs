<%- include('../partials/header'); %>

<div class="container">
    <h1 style="text-align: center; margin: 10px auto;">Edit <%= campground.name %></h1>
    <div class="row">
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="campground[price]" placeholder="price" min="0" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/campgrounds">Go Back!</a>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>